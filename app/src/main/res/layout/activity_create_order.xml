<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/padding_left_right"
        android:layout_marginRight="@dimen/padding_left_right"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/padding_left_right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:orientation="horizontal"
                android:columnCount="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_columnSpan="1"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="3">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_order_name"
                        android:textSize="@dimen/list_name_text"
                        android:hint="订单名称"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_columnSpan="1"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="3">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_order_client_name"
                        android:textSize="@dimen/list_name_text"
                        android:hint="客户名称"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_columnSpan="1"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="3">
                    <android.support.design.widget.TextInputEditText
                        android:textSize="@dimen/list_name_text"
                        android:hint="订单数量"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_columnSpan="1"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_columnSpan="2">
                    <TextView
                        android:text="订单开始时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_order_start_time"
                        android:layout_gravity="center_vertical"
                        android:text="2017.08.01"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/btn_order_start_time_select"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" 修  改 "/>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_columnSpan="1"/>


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_columnSpan="2">
                    <TextView
                        android:text="订单结束时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_order_end_time"
                        android:layout_gravity="center_vertical"
                        android:text="2017.08.01"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_order_end_time_select"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" 修  改 "/>

            </GridLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:padding="@dimen/padding_left_right"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/edit_add_on"
            android:gravity="left|top"
            android:hint="备注："
            android:padding="8dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_add_on"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btn_done_to_create_procedure"
        android:outlineProvider="background"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="@dimen/padding_left_right"
        android:layout_marginLeft="@dimen/padding_left_right"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:text="确认创建，拆分工序"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</LinearLayout>