<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    app:cardCornerRadius="8dp"
                                    android:layout_marginLeft="@dimen/padding_left_right"
                                    android:layout_marginRight="@dimen/padding_left_right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/content_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_item_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="捏100个泥人"
            android:textColor="@color/title"
            android:textSize="@dimen/list_name_text"/>
        <TextView
            android:id="@+id/txt_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="订单号：B12-1"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_right"
        android:paddingRight="@dimen/padding_left_right"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/txt_item_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="63%"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/txt_item_order_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首钢集团"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"/>
    </RelativeLayout>



    <ProgressBar
        android:progressTint="@color/progress_high"
        android:id="@+id/progress_item_order"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_right"
        android:layout_marginRight="@dimen/padding_left_right"
        android:progress="63"/>

    <RelativeLayout
        style="@style/content_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_order_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/07/01"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txt_order_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/09/01"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_order_done"
        style="@style/content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:textColor="@color/white"
            android:padding="8dp"
            android:background="@drawable/bg_btn"
            android:text="确认完成"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>