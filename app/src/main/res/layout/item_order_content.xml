<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="@dimen/padding_left_right"
                                    android:layout_marginRight="@dimen/padding_left_right"
                                    android:layout_marginTop="4dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_item_order_custom_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首钢集团"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/list_name_text"/>

            <TextView
                android:id="@+id/txt_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="订单号：B12-1"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/list_name_text"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">


            <TextView
                android:id="@+id/txt_item_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:text="生成杂修"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_text"/>
        </RelativeLayout>


        <ProgressBar
            android:id="@+id/progress_item_order"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="63"
            android:progressTint="@color/progress_high"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_item_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="63%"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/description_text"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_order_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/07/01"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/description_text"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:background="@color/progress_high"/>

            <TextView
                android:id="@+id/txt_order_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017/09/01"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/description_text"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_order_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:clickable="true"
                android:id="@+id/btn_order_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_btn"
                android:padding="8dp"
                android:text="确认完成"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>