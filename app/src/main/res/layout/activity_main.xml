<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.hrsoft.transparent_factory_manager.main.MainActivity">


    <LinearLayout
        android:id="@+id/ly_tab_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_tab_menu_home"
            style="@style/tab_menu_item">

            <ImageView
                android:id="@+id/img_tab_menu_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_home_primary"/>

            <TextView
                android:textSize="@dimen/list_name_text"
                android:textColor="#9b9b9b"
                android:id="@+id/txt_tab_menu_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_tab_menu_order"
            style="@style/tab_menu_item">

            <ImageView
                android:id="@+id/img_tab_menu_order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_order_primary"/>

            <TextView
                android:textColor="@color/subtitle"
                android:textSize="@dimen/list_name_text"
                android:id="@+id/txt_tab_menu_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"/>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ly_tab_menu_mine"
            style="@style/tab_menu_item">

            <ImageView
                android:id="@+id/img_tab_menu_mine"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_mine_primary"/>

            <TextView
                android:textColor="@color/subtitle"
                android:textSize="@dimen/list_name_text"
                android:id="@+id/txt_tab_menu_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/tab_menu_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/ly_tab_menu"
        android:background="@color/divider"/>

    <FrameLayout
        android:layout_above="@+id/tab_menu_divider"
        android:background="#f2f2f2"
        android:id="@+id/frame_main_container"
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
